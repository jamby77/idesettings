<templateSet group="user">
  <template name="clog" value="console.log($CURSOR$);$END$" description="console.log" toReformat="true" toShortenFQNames="true">
    <variable name="CURSOR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JS_STATEMENT" value="true" />
    </context>
  </template>
  <template name="th" value="$this-&gt;" description="this with arrow" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="todo" value="// todo" description="todo tpl" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="%%" value="&lt;% $CURSOR$ %&gt;$END$" description="" toReformat="true" toShortenFQNames="true">
    <variable name="CURSOR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
    </context>
  </template>
  <template name="todojs" value="// todo" description="" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="usif" value="&lt;% if($condition$) { %&gt;&#10;$SELECTION$&#10;&lt;% } %&gt;" description="underscore if" toReformat="true" toShortenFQNames="true">
    <variable name="condition" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
    </context>
  </template>
  <template name="ifn" value="if (null === $VAR$) {&#10;    return $RES$;&#10;}&#10;$END$" description="if variable is null" toReformat="true" toShortenFQNames="true">
    <variable name="VAR" expression="phpVar" defaultValue="" alwaysStopAt="true" />
    <variable name="RES" expression="" defaultValue="&quot;null&quot;" alwaysStopAt="true" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
</templateSet>